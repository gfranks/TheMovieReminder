<resources>


    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:colorControlHighlight">@color/theme_control_highlight</item>
        <item name="android:colorAccent">@color/theme_accent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="android:actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="android:actionModeBackground">@color/theme_color_primary</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar
        </item>
        <item name="android:listViewStyle">@style/ListViewStyle</item>
        <item name="android:expandableListViewStyle">@style/ExpandableListViewStyle</item>
        <item name="android:windowBackground">@color/theme_gray_2</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <!-- Support library compatibility -->
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorControlHighlight">@color/theme_control_highlight</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="actionModeBackground">@color/theme_color_primary</item>
    </style>

    <style name="AppTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="android:backgroundStacked">@drawable/bg_actionbar_stacked</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/bg_actionbar</item>
        <item name="backgroundStacked">@drawable/bg_actionbar_stacked</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/SubtitleTextStyle</item>
    </style>

    <style name="BlurDialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- action bar subtitle text -->
    <style name="SubtitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- action bar tab text style -->
    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/theme_gray_dark</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:listSelector">@drawable/bg_list_selector</item>
        <item name="android:divider">@color/theme_gray_lighter</item>
        <item name="android:dividerHeight">2px</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--
        <item name="android:background">@color/light_background</item>

        -->
    </style>

    <style name="ExpandableListViewStyle" parent="@android:style/Widget.Holo.ExpandableListView">
        <item name="android:listSelector">@drawable/bg_list_selector</item>
        <!--
        <item name="android:background">@color/light_background</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:drawSelectorOnTop">true</item>
        -->
    </style>

    <style name="FeedBackTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/theme_white</item>
        <item name="android:textSize">@dimen/content</item>
    </style>

    <!-- debug info text style -->
    <style name="DebugInfoTextStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DebugInfoDetailTextStyle" parent="DebugInfoTextStyle">
        <item name="android:layout_gravity">start|end|center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DebugInfoHeaderTextStyle" parent="DebugInfoTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start|end</item>
        <item name="android:layout_span">2</item>
    </style>

    <style name="DebugSpinnerItemStyle" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="fab_option" parent="@style/TextViewStyle">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

</resources>
