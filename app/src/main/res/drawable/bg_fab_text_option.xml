<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/theme_gray_2" />

            <stroke android:width="1dp" android:color="@color/theme_black" />

            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />

            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/theme_gray_transparent" />

            <stroke android:width="1dp" android:color="@color/theme_black" />

            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />

            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
        </shape>
    </item>

</selector>